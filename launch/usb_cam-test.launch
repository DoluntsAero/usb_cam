<launch>
 <group ns="stereo">

  <node pkg="usb_cam" type="usb_cam_node" name="left" >
    <param name="video_device" value="/dev/video10" />
    <param name="image_width" value="640" />
    <param name="image_height" value="480" />
    <param name="pixel_format" value="mjpeg" />
    <param name="camera_frame_id" value="left_cam_optical" />
    <param name="framerate" value="120" />
    <param name="io_method" value="mmap"/>
    <param name="camera_info_url" type="string" value="package://stereo_demo/cfg/mono_120_l.yaml" />
    <param name="camera_name" type="string" value="left_camera" />
  </node>

  <node pkg="usb_cam" type="usb_cam_node" name="right" >
    <param name="video_device" value="/dev/video8" />
    <param name="image_width" value="640" />
    <param name="image_height" value="480" />
    <param name="pixel_format" value="mjpeg" />
    <param name="camera_frame_id" value="right_cam_optical" />
    <param name="framerate" value="120" />
    <param name="io_method" value="mmap"/>
    <param name="camera_info_url" type="string" value="package://stereo_demo/cfg/mono_120_r.yaml" />
    <param name="camera_name" type="string" value="right_camera" />
  </node>

  <node pkg="tf" type="static_transform_publisher" name="tf_camera_left"   required="true" args="0 -0.05 0 0 0 0 stereo_link left_cam_optical 10"/>
  <node pkg="tf" type="static_transform_publisher" name="tf_camera_right"  required="true" args="0 0.05 0 0 0 0 stereo_link right_cam_optical 10"/>

</group>

</launch>
